<div class="container justify-content-center"> 
    <a href="/exercises" class="btn btn-primary mr-5">View Exercises</a>
    <a href="/users/<%= @workout.user_id %>/workouts" class="btn btn-primary mr-5">Back</a>    
</div>

<div class="container">
    <h2>Exercises</h2>
</div>

<div class="container"> 
    <div class="row">    
        <% @workout.exercises.each do |exercise| %>
            <div class="col-sm-6 col-lg-3 py-2 mr-5">
                <div class="card text-white bg-dark mb-5" style="width: 18rem;">
                <% if @workout.exercises.count > 0 %>
                    <img src="<%= exercise.image_url %>" class="card-img-top">
                <% end %>
                    <div class="card-body">
                        <h5 class="card-title d-flex justify-content-center"><%= exercise.exercise_name %></h5>
                        <a href="/exercises/<%= exercise.id %>" class="btn btn-primary d-flex justify-content-center">View Exercise</a>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>

</body>
</html>