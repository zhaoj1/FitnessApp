<body>

<style>

html, body{
    height: 100%;
}

.container {
        border: 5px solid rgba(75, 87, 122, 0.2);
        width: 30%;
        background: rgba(0,0,0,.6);
        box-shadow: 5px 10px #356486;
        color: white;
        text-align: center;
    }

.buttonholder{
    width: 50%;
    text-align: center;
    margin-left: 95px;
    margin-top: 15px;
}

.form-groups{
    margin-top: 10px;
}

.wrapper {
    padding: 5% 0; 
}

</style>

<div class="background img-fluid" style="background-image: url(https://thumbs.dreamstime.com/b/fitness-bodybuilding-background-dumbbells-gym-floor-top-view-fitness-bodybuilding-concept-background-product-photograph-108091636.jpg); background-size:cover; background-position: center; background-repeat: no-repeat; height: 100%">

    <div class="wrapper">
        <div class="container">
            <% if flash[:login_error] %>
                <p><%= flash[:login_error] %></p>
            <% end %>
            <%= form_tag login_path do %>
                <div class="form-groups">
                    <%= text_field_tag :"user[username]", nil, placeholder: "Username" %>
                </div>
                <div class="form-groups">
                    <%= password_field_tag :"user[password]", nil, placeholder: "Password" %>
                </div>
                <div class="buttonholder">
                    <%= submit_tag 'Login' %>
                </div>
            <% end %>
        </div>
    </div>

</div>
</body>